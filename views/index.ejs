<%- include('layout') %>

<h1 class="text-center mb-4">ğŸ“– Guestbook</h1>

<form action="/register" method="POST" class="card p-4 shadow-sm mb-5">
  <div class="mb-3">
    <label for="name" class="form-label">Full Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email address</label>
    <input type="email" class="form-control" id="email" name="email" required>
  </div>
  <div class="mb-3">
    <label for="message" class="form-label">Message</label>
    <textarea class="form-control" id="message" rows="3" name="message" required></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<h2 class="mb-3">ğŸ‘¥ Guest Entries</h2>
<ul class="list-group">
  <% guests.forEach(guest => { %>
    <li class="list-group-item">
      <strong><%= guest.name %></strong> (<%= guest.email %>) <br/>
      <small class="text-muted"><%= guest.created_at %></small>
      <p><%= guest.message %></p>
    </li>
  <% }) %>
</ul>

</div>
</body>
</html>
